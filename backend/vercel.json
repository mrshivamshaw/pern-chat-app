{
    "version": 2,
    "builds": [
      {
        "src": "backend/src/index.ts",
        "use": "@vercel/node",
        "config": {
          "includeFiles": [
            "backend/dist/**/*",
            "backend/prisma/**/*"
          ]
        }
      }
    ],
    "functions": {
      "backend/src/**/*.ts": {
        "maxDuration": 60
      }
    },
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/backend/src/index.ts"
      },
      {
        "src": "/(.*)",
        "dest": "/index.html"
      }
    ]
  }
  