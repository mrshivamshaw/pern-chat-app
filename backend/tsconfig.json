{
	"compilerOptions": {
	  "target": "ES2020",
	  "module": "ESNext",
	  "moduleResolution": "node",
	  "outDir": "./dist/src",
	  "rootDir": "./src",
	  "strict": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "types": ["node", "express", "bcryptjs", "jsonwebtoken", "socket.io-client"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
  }
  